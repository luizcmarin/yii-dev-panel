{
  "name": "root",
  "private": true,
  "homepage": "https://github.com/yiisoft/yii-dev-panel",
  "keywords": [
    "yiisoft",
    "yii",
    "debug",
    "gii",
    "yii-dev-panel"
  ],
  "author": "Dmitrii Derepko <xepozzd@gmail.com> (https://github.com/xepozz)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/yiisoft/yii-dev-panel"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "gh-pages": "^5.0.0",
    "lerna": "^6.6.1",
    "react-app-rewired": "^2.2.1",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^4.9.5",
    "verdaccio": "^5.23.2"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d packages/yii-dev-panel/build",
    "start": "lerna run start --parallel --verbose",
    "build": "lerna run build --parallel --verbose && npm run copy-toolbar",
    "copy-toolbar": "mkdir packages/yii-dev-panel/build/toolbar && cp -r packages/yii-dev-toolbar/build/* packages/yii-dev-panel/build/toolbar"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
