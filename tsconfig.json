{
  "compilerOptions": {
    "target": "es5",
    "noErrorTruncation": false,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@yii-dev-panel/app/*": [
        "packages/app/src/*"
      ],
      "@yii-dev-panel/sdk/*": [
        "packages/sdk/src/*"
      ],
      "@yii-dev-panel/toolbar/*": [
        "packages/toolbar/src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "exclude": [
    "**/.*/",
    "**/build",
    "**/node_modules"
  ]
}
